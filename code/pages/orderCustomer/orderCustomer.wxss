page {
  background: #f2f2f2;
}

.headerInfo{
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}

.headerFlex{
  background: #ffffff;
  border: solid #ffffff 1rpx;
  border-radius: 5rpx;
}

.statusInfo{
  height: 90rpx;
}

.statusName{
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  font-weight: bold;
}

.footerInfo{
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 10rpx;
}

.footerButtonGreen{
  border: solid #ffffff 3rpx;
  border-radius: 5rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 200rpx;
  font-size: 32rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  background: lightgreen;
}

.footerButtonRed{
  border: solid #ffffff 3rpx;
  border-radius: 5rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 200rpx;
  font-size: 32rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  background: lightcoral;
}

.footerButtonYellow{
  border: solid #ffffff 3rpx;
  border-radius: 5rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 200rpx;
  font-size: 32rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  background: orange;
}

.foodInfo{
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.shopInfo{
  width: 100%;
  display: flex;
}

.shopLogo{
  width: 60rpx;
  height: 60rpx;
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.shopName{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #3e3e3e;
}

.foodFlex{
  display: flex;
}

.foodImg {
  width: 110rpx;
  height: 110rpx;
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.foodName{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #3e3e3e;
}

.foodNum{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #8e8e8e;
}

.foodPrice{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #3e3e3e;
  padding-right: 40rpx;
  position: absolute;
  right: 0;
}

.totalWrap{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding-bottom: 15rpx;
}

.totalPay{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #3e3e3e;
  font-weight: bold;
  padding-right: 40rpx;
  position: absolute;
  right: 0;
}

.totalPayRed{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: red;
  font-weight: bold;
}

.dineInfo{
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.itemName{
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #8e8e8e;
}

.itemNameBlack{
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #3e3e3e;
}

.paddingTop{
  padding-top: 10rpx;
}

.paddingBottom{
  padding-bottom: 10rpx;
}

.orderInfo{
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 15rpx;
}
