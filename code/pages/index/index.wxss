/**index.wxss**/
.container_index{
  position:absolute;
  width:100%;
  height:100%;
  background:#eee;
}

.aside{
  float:left;
  height:100%;
  width:100px;
  padding-bottom:0;
  text-align:center;
  overflow: scroll;
  background:#fff;
}
.aside::-webkit-scrollbar{
  width:0;
}
#user_btn{
  margin-top: 5px;
    width: 20px;
    border-radius: 50px;
    background: #673bb7;
    color: white;
    font-size: 10px;
    
    position: relative;
    top: 23px;
    opacity: 0;
}
.aside .menu{
  height:40px;
  color:#333;
  font-size:14px;
  line-height:40px;
  border-top:1px solid #eee;
}
.aside .menu.active{
  background:#eee;
}
.item-content{
  float:left;
  width:calc(100% - 100px);
  height:100%;
  padding-bottom:80px;
}
.item-content .box{
  height:calc(100% - 10px);
  padding:10px 5px 10px 10px;
  overflow:scroll;
  background:#237346;

}

.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  height:80px;
  padding:20px 0 20px 10px;
  margin-bottom:10px;
  background:#fff;
}
.item-content .box .item image{
  display:block;
  float:left;
  height:80px;
  width:90px;
  margin-right:10px;
}
.item-content .box .item text{
  display:block;
  font-size:12px;
}
.item-content .box .item .title{
  margin-bottom:5px;
  font-weight:bolder;
}
.item-content .box .item .price{
  color:#237346;
  font-size:15px;
  margin-bottom:5px;
}
.item-content .box .item .btn{
  display:block;
  float:right;
  margin:-10px 10px 0 0;
  padding:5px 10px;
  font-size:14px;
  color:#fff;
  background:#237346;
  border-radius:20px;
}
.item-content .box .item .btn.active{
  background:#ccc;
}
.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:80px;
    line-height:80px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
}


.bottom-bar>view{
    flex-grow: 1;
}
.bottom-bar .count{
    padding-left:10px;
}
.bottom-bar .num{
    margin-right:10px;
    font-size:18px;
    font-weight:bolder;
    color:#237346;
}
.bottom-bar .btn{
    height:40px;
    width:50px;
    margin:20px 10px 0 0;
    color:#fff;
    line-height:40px;
    text-align:center;
    font-size:16px;
    background:#237346;
}
.opera{
  
  
  text-align:right;
  display: inline-block;
}
.box .item .opera text{
  display: inline-block;
  font-size: 16px;
}
.box .item .opera .btn_price{
  display:inline-block;
height:23px;
width:20px;
line-height:22px;
text-align:center;
color:#fff;
font-weight:bolder;
background:#237346;
border-radius:5px;

}
.box .item .opera .num{
  padding:1px 5px;
  margin:3px;
  border:1px solid #237346;
}
#user_img{
    width:25px;
  height:25px;
  display:inline-block;
  overflow:hidden;

}
.option{
  display: inline-block;
}
.item_title{
  padding: 10px;
  background: orange;
  color:black;
}
