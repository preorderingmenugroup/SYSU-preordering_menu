}

.item-second{
  width: 35%;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.sec-col-ok{
  color: gray;
}

.sec-col-edit{
  color: black;
}

.headImage-second{
  width: 150rpx;
  height: 150rpx;
}

