/**index.wxss**/

.settings {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
} 

.buttons{
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px 0 10px;
  box-sizing: border-box;
}

.ok-btn{
  width: 40px;
  height: 25px;
  background-color: #237346;
  text-align: center;
  border-radius: 10%;
}

.edit-btn{
  width: 20px;
  height:20px;
}

.tunnel, .headImage{
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  padding-left: 40rpx;
  font-size: 34rpx;
}

.headImage{
  height: 160rpx;
}

