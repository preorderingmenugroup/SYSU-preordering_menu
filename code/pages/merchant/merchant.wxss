.item-content{
  display: flex;
  flex-direction: column;
  margin: 10px 10px 10px 25px;
  box-sizing: border-box;
}

.item{
  display: flex;
  flex-direction: row;
  margin-bottom: 20px;
}

.left{
  display: flex;
  flex-direction: column;
  width: 50%;
}

.right{
  display: flex;
  flex-direction: column;
  width: 50%;
  font-size: 15px;
  box-sizing: border-box;
  align-items: center;
  justify-content: center;
}

.img{
  width: 100%;
  height: 100px;
}

.del{
  display: flex;
  align-items: center;
  height: 20px;
  color: red; 
  font-size: 12px;
}

.price{
  display: flex;
  flex-direction: row;
}

.option{
  position: fixed;
}

#user_btn{
    margin-top: 5px;
    padding-left: 5px;
    width: 20px;
    border-radius: 50px;
    background: #673bb7;
    color: white;
    font-size: 10px;
    
    position: relative;
    top: 23px;
    opacity: 0;
}
#user_img{
    width:25px;
    height:25px;
    display:inline-block;
    overflow:hidden;
}